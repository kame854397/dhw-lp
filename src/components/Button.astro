---
const {
    href = "",
    label = "詳しく見る",
    color = "white",
    width = "medium",
    target = "_self",
    iconSrc,
} = Astro.props;
---
<a class={`container container--color-${color} container--width-${width}`} href={href} target={target}>
    <span class={`label`}>
        {iconSrc &&
            <span class="icon"><span style={`-webkit-mask-image:url(${iconSrc}); mask-image:url(${iconSrc});`}></span></span>
        }
        {label}
    </span>
    <span class="arrow"></span>
</a>
<style>
    .container {
        position: relative;
        z-index: 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        height: 68px;
        padding: 0 24px;
        color: var(--color-black-primary);
        background: linear-gradient(var(--color-orange-secondary),var(--color-orange-primary));
        border-radius: 1000px;
        box-shadow: var(--shadow-primary-medium);
    }
    .container--color-white::before {
        content: "";
        position: absolute;
        inset: 3px;
        background: var(--color-white-primary);
        border-radius: 1000px;
        z-index: -1;
    }
    .container--width-medium {
        max-width: 100%;
        max-width: 280px;
    }
    .icon {
        width: 24px;
        height: 24px;
        filter: drop-shadow(var(--filter-shadow-primary-tiny));
    }
    .icon>span {
        display: block;
        width: 100%;
        height: 100%;
        background: var(--color-white-primary);
        -webkit-mask: center/contain no-repeat;
        mask: center/contain no-repeat;
    }
    :where(.container--color-white) .icon {
        filter: none;
    }
    :where(.container--color-white) .icon span {
        background: var(--color-black-primary);
    }
    .label {
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 0 auto;
    }
    .container--color-orange {
        color: var(--color-white-primary);
        text-shadow: var(--text-shadow-primary);
        background: linear-gradient(-60deg,var(--color-orange-primary),var(--color-orange-secondary));
        border: 1px solid rgba(255,255,255,0.5);
    }
    .arrow {
        position: relative;
        width: 24px;
        height: 24px;
        background: var(--color-white-primary);
        border-radius: 1000px;
        box-shadow: var(--shadow-primary-tiny);
    }
    .arrow::before {
        content: "";
        position: absolute;
        inset: 4px;
        background: var(--color-orange-primary);
        mask: url("/images/arrow-primary-right.svg") center/contain no-repeat;
        -webkit-mask: url("/images/arrow-primary-right.svg") center/contain no-repeat;
    }
    :where(.container--color-white) .arrow {
        background: var(--color-orange-primary);
    }
    :where(.container--color-white) .arrow::before {
        background: var(--color-white-primary);
    }
</style>