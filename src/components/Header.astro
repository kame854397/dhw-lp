---
import Button from "./Button.astro";
const naviItem = [
    {label:"STUDIOつくばの特徴",href:"#feature"},
    {label:"コース紹介",href:"#feature"},
    {label:"卒業生の制作物",href:"#feature"},
    {label:"よくある質問",href:"#feature"},
    {label:"卒業生インタビュー",href:"#feature"},
]
---
<header class="container">
    <div class="inner">
        <h1 class="logo">
            <img src="/images/site-logo-color.svg" alt="デジタルハリウッド STUDIOつくば" width="200" height="40">
        </h1>
        <nav class="navi-container">
            <ul class="navi">
                {naviItem.map((item)=>
                    <li class="navi-item">
                        <a href={item.href}>{item.label}</a>
                    </li>
                )}
                <li class="contact-button">
                    <Button label="お問い合わせ" width="auto" iconSrc="/images/icon-email.svg" color="orange" />
                </li>
            </ul>
        </nav>
    </div>
</header>
<style>
    .container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 8;
        transform: translate3d(0,0,0);
        opacity: 0;
        transform: translate(0,-8px);
        transition: opacity 0.5s 0.875s,transform 0.5s 0.875s;
    }
    :global(.is-load) .container {
        transform: none;
        opacity: 1;
    }
    .inner {
        max-width: var(--content-width-wide);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .navi {
        padding: 14px 0;
        display: flex;
        align-items: center;
        gap: 40px;
        border-bottom: 1px solid var(--color-lightgray-primary);
    }
    .navi-item>a {
        display: block;
        padding: 8px 0;
        font-size: 18px;
    }
</style>