---
import Button from "./Button.astro";
const naviItem = [
    {label:"STUDIOつくばの特徴",href:"#feature"},
    {label:"コース紹介",href:"#course"},
    {label:"卒業生の制作物",href:"#works"},
    {label:"卒業生インタビュー",href:"#interview"},
]
---
<header class="container">
    <div class="inner">
        <h1 class="logo">
            <img src="/images/site-logo-color.svg" alt="デジタルハリウッド STUDIOつくば" width="200" height="40">
        </h1>
        <nav class="navi-container">
            <ul class="navi">
                {naviItem.map((item)=>
                    <li class="navi-item">
                        <a href={item.href}>
                            {item.label}
                        </a>
                    </li>
                )}
                <li class="contact-button">
                    <Button label="お問い合わせ" width="auto" iconSrc="/images/icon-email.svg" color="orange" />
                </li>
            </ul>
        </nav>
    </div>
</header>
<style>
    .container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 8;
        transform: translate3d(0,0,0);
        opacity: 0;
        transform: translate(0,-8px);
        transition: opacity 0.5s 0.875s,transform 0.5s 0.875s;
    }
    .logo {
        width: 168px;
    }
    :global(.is-load) .container {
        transform: none;
        opacity: 1;
    }
    .inner {
        max-width: var(--content-width-wide);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .navi {
        padding: 14px 0;
        display: flex;
        align-items: center;
        font-size: 18px;
        gap: 36px;
        border-bottom: 1px solid var(--color-lightgray-secondary);
    }
    .navi-item>a {
        position: relative;
        display: block;
        padding: 8px 0;
    }
    .navi-item>a::after {
        content: "";
        position: absolute;
        left: 50%;
        bottom: -4px;
        transform: translate(-50%,0);
        width: 16px;
        height: 16px;
        background: url("/images/arrow-secondary-down.svg") center/contain no-repeat;
        opacity: 0;
        transition: opacity 0.25s,transform 0.25s;
    }
    .navi-item>a:hover::after {
        transform: translate(-50%,4px);
        opacity: 1;
    }

    @media screen and (max-width:1280px) {
        .navi {
            padding: 8px 0;
            font-size: 16px;
            gap: 24px;
        }
        .logo {
            width: 140px;
        }
    }
</style>
<script>
    (function(){
        const body = document.querySelector("body");
        window.addEventListener('scroll', function(){
            if(window.scrollY > 200) {
                body.classList.add("is-scrolled");
            } else {
                body.classList.remove("is-scrolled");
            }
        });
    }());
</script>