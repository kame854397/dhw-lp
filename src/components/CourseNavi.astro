---
const {
    courseData,
} = Astro.props;
---
<div class="container">
    <ul class="navi">
        {courseData.map((item,index)=>
            <li class={`course-navi__item item ${index===0 ? "is-active" : ""}`}>
                <a href={`#course-${index}`}>
                    <span class="icon">
                        <img src={item.icon} alt="" width="40" height="40" />
                    </span>
                    <span class="label">{item.label}</span>
                    <span class="arrow"></span>
                </a>
            </li>
        )}
        <li class={`course-navi__item item`}>
            <a href={`#course-${courseData.length + 1}`}>
                <span class="icon">
                    <img src="/images/icon-course-others.svg" alt="" width="40" height="40" />
                </span>
                <span class="label">その他のコース</span>
                <span class="arrow"></span>
            </a>
        </li>
    </ul>
</div>
<style>
    .container {
        position: relative;
        z-index: 0;
        padding: 16px 16px 16px 0;
    }
    .container::before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        width: 100vw;
        border-radius: 0 32px 32px 0;
        background: var(--color-lightgray-primary);
    }
    .navi {
        display: grid;
        gap: 12px;
    }
    .item a{
        position: relative;
        z-index: 0;
        display: flex;
        align-items: center;
        padding: 0 48px 0 24px;
        height: 72px;
        gap: 10px;
        line-height: 1.25;
        background: var(--color-white-primary);
        border-radius: 1000px;
        transition: box-shadow 0.25s;
    }
    .item a::before {
        content: "";
        position: absolute;
        inset: 0;
        z-index: -1;
        border-radius: 1000px;
        border: 1px solid rgba(255,255,255,0.5);
        background: linear-gradient(90deg,#FF7067,#FB2740);
        opacity: 0;
        transition: opacity 0.25s;
    }
    .icon {
        position: relative;
        flex-shrink: 0;
        width: 24px;
        height: 24px;
    }
    .icon::before {
        content: "";
        position: absolute;
        inset: -4px;
        z-index: -1;
        border-radius: 1000px;
        background: rgba(255,255,255,0.75);
        border: 1px solid rgba(255,255,255,0.5);
        box-shadow: var(--shadow-primary-tiny);
        opacity: 0;
        transition: opacity 0.25s;
    }
    .arrow {
        position: absolute;
        right: 24px;
        width: 24px;
        height: 24px;
        background: var(--color-orange-primary);
        border-radius: 1000px;
        box-shadow: var(--shadow-primary-tiny);
    }
    .arrow::before {
        content: "";
        position: absolute;
        inset: 4px;
        background: var(--color-white-primary);
        mask: url("/images/arrow-primary-right.svg") center/contain no-repeat;
        -webkit-mask: url("/images/arrow-primary-right.svg") center/contain no-repeat;
    }
    .item.is-active a {
        color: var(--color-white-primary);
        text-shadow: var(--text-shadow-primary);
        box-shadow: var(--shadow-primary-medium);
        z-index: 2;
    }
    .item.is-active a::before {
        opacity: 1;
    }
    .item.is-active .icon::before {
        opacity: 1;
    }
    .item.is-active .arrow {
        background: var(--color-white-primary);
    }
    .item.is-active .arrow::before {
        background: var(--color-orange-primary);
    }
</style>